from turtle import Turtle, Screen

a = Turtle()
b = Turtle()
c = Turtle()
d = Turtle()
e = Turtle()
a.hideturtle()
b.hideturtle()
c.hideturtle()
d.hideturtle()
e.hideturtle()
c.penup()
a.fillcolor("green")
b.fillcolor("green")
a.pencolor("green")
b.pencolor("green")
a.speed(15)
b.speed(15)
a.begin_fill()
b.begin_fill()

def leftside():
    a.left(225)
    a.circle(-145, 20)
    a.right(225)
    a.circle(40, 45)
    a.right(25)

def rightside():
    b.right(45)
    b.circle(145, 20)
    b.right(-225)
    b.circle(-40, 45)
    b.right(155)
    
for i in range(7):
    leftside()
    rightside()

a.forward(75)
b.right(180)
b.forward(75)
a.left(90)
a.forward(193)
a.end_fill()
b.right(90)
b.forward(193)
b.end_fill()

