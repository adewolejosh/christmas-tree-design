d.penup()
e.penup()
d.forward(50)
e.forward(200)
d.pendown()
e.pendown()
d.pencolor("gold")
e.pencolor("gold")

def dstar():
    d.forward(8)
    d.right(135)
    d.forward(10)
    d.right(-135)
    d.forward(10)
    d.right(90)
    d.forward(8)

def estar():
    e.forward(8)
    e.right(135)
    e.forward(10)
    e.right(-135)
    e.forward(10)
    e.right(90)
    e.forward(8)

d.fillcolor("gold")
e.fillcolor("gold")
d.speed(10)
e.speed(20)

for i in range(30):
    d.begin_fill()
    e.begin_fill()
    for i in range(4):
        dstar()
        estar()
        
    d.end_fill()
    e.end_fill()
    d.undo()
    e.undo()

for i in range(30):
    d.begin_fill()
    e.begin_fill()
    for i in range(4):
        dstar()
        estar()
        
    d.end_fill()
    e.end_fill()
    e.undo()
    d.undo()
